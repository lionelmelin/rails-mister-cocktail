<div class="container">
  <h1><%= @cocktail.name %> </h1>

  <% @cocktail.doses.each do |dose|%>
  <p>
    Ingredient: <%= dose.ingredient.name %>, Dose: <%= dose.description %>
    <%= link_to 'Delete dose', dose_path(dose), method: :delete %>
  </p>
  <% end %>

  <%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %>
  <br>
  <%= link_to 'back to list', cocktails_path %>
</div>
